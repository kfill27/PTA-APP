<div class="uk-container">
  <p id="notice"><%= notice %></p>

  <div class="uk-margin-bottom">
    <%= link_to 'View Class', teacher_path(@student.teacher) %> |
    <%= link_to 'Edit Student', edit_student_path(@student) %>
  </div>

  <div class="uk-card uk-card-primary uk-card-body">
    <h3 class="uk-card-title"><%= @student.first_name %> <%= @student.middle_name %> <%= @student.last_name %> - <%= @student.student_id %></h3>
    <h3 class="uk-card-title uk-position-right uk-margin-right"><%= @student.teacher.name%></h3>
  </div>

  <table class="uk-table uk-table-striped uk-table-hover uk-table-middle">
    <thead>
      <tr>
        <th>Member Name</th>
        <th>Member Email</th>
        <th>Member Phone</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <% @student.memberships.each do |member| %>
          <td><p><%= member.name.capitalize %></p></td>
          <td><p><%= member.email %></p></td>
          <td><p><%= member.phone %></p></td>
        <% end %>
      </tr>
    </tbody>
  </table>

</div>
